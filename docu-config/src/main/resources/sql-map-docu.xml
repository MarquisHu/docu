<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<!-- changes from the defaults for testing -->
		<setting name="cacheEnabled" value="false" />
		<setting name="useGeneratedKeys" value="true" />
		<setting name="defaultExecutorType" value="REUSE" />
	</settings>
	
	<typeAliases>
        <typeAlias type="com.docu.user.dto.User" alias="User" />
        
        <typeAlias type="com.docu.account.dto.Account" alias="Account" />
        <typeAlias type="com.docu.account.dto.AccountBalance" alias="AccountBalance" />
        <typeAlias type="com.docu.account.dto.AccountDetail" alias="AccountDetail" />
        
        <typeAlias type="com.docu.activity.dto.Activity" alias="Activity" />
    </typeAliases>

	<mappers>
		<!-- 用户模块 sql start -->
		<mapper resource="sql/sqlmap_user.xml" />
		
		<!-- 账户模块 sql start -->
		<mapper resource="sql/sqlmap_account.xml" />
		<mapper resource="sql/sqlmap_accountdetail.xml" />
		
		<!-- 活动模块 sql start -->
		<mapper resource="sql/sqlmap_activity.xml" />
	</mappers>
</configuration>
